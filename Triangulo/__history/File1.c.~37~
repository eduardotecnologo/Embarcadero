#include <stdio.h>


int main()
{
	int ladoA, ladoB, ladoC;

	printf("Digite os 3 valores: \n");
	scanf("%d %d %d", &ladoA, &ladoB, &ladoC);

	if(ladoA == ladoB){
	   if(ladoB == ladoC){
			printf("Opa! O triangulo é equilátero!");
	   }else{
			printf("\na! O triango não é Equilátero!");
		}
	}else{
			printf("\na! O triango não é Equilátero!");
	}
}

